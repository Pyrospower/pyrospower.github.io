---
import Banner from "~/components/Banner.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Pyrospower" />
    <meta
      name="description"
      content="Bonjour et bienvenue, je suis développeur web"
    />
    <meta property="og:title" content="Pyrospower" />
    <meta
      property="og:description"
      content="Bonjour et bienvenue, je suis développeur web"
    />
    <meta property="og:url" content="https://pyrospower.github.io" />
    <meta
      property="og:image"
      content="https://pbs.twimg.com/profile_images/1199062019963535360/5ZT3FTPt_400x400.png"
    />
    <meta property="og:type" content="website" />
    <meta name="theme-color" content="#1e90ff" />
    <meta
      name="keywords"
      content="Pyrospower, socials, développeur web, développeur fullstack"
    />
    <title>Pyrospower</title>
  </head>
  <body>
    <div
      class="flex min-h-screen flex-col items-center bg-[#181a1f] text-white"
    >
      <div class="w-full max-w-2xl">
        <Banner />
        <slot />
      </div>
    </div>
  </body>
</html>
