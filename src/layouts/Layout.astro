---
import { Image } from "astro:assets";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Pyrospower" />
		<meta name="description" content="Bonjour et bienvenue, je suis développeur web" />
		<meta property="og:image" content="https://pbs.twimg.com/profile_images/1199062019963535360/5ZT3FTPt_400x400.png" />
		<meta name="theme-color" content="#1e90ff" />
		<meta name="keywords" content="Pyrospower, socials, développeur web, développeur fullstack" />
		<title>Pyrospower</title>
	</head>
	<body>
		<div class="min-h-screen bg-[#181a1f] text-white flex flex-col items-center">
			<div class="w-full max-w-2xl">
				<div class="relative h-64">
					<div class="absolute bottom-0 left-0 right-0 p-6 flex items-center gap-4">
						<div class="relative">
							<Image
								src="https://avatars.githubusercontent.com/u/11092955?v=4"
								alt="Profile picture"
								width={120}
								height={120}
								class="rounded-full border-4 border-gray-900"
							/>
						</div>
						<div class="space-y-2">
							<h1 class="text-3xl font-bold">Pyrospower</h1>
							<p class="text-sm italic text-gray-400">he/him</p>
						</div>
					</div>
				</div>
				<slot />
			</div>
		</div>
	</body>
</html>